{
	"inputs": [
		{
			"description": "API key for authentication",
			"id": "context7-api-key",
			"password": true,
			"type": "promptString",
		},
	],
	"servers": {
		"context7": {
			"headers": { "CONTEXT7_API_KEY": "${input:context7-api-key}" },
			"type": "http",
			"url": "https://mcp.context7.com/mcp",
		},
		"gh-grep": {
			"type": "http",
			"url": "https://mcp.grep.app",
		},
		"github": {
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp/",
		},
		"npm-registry": {
			"command": "npm-registry-mcp",
			"type": "stdio",
		},
		"uniprof": {
			"args": ["x", "uniprof", "mcp", "run"],
			"command": "bun",
		},
	},
}
