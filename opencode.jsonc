			"mode": "all",
			"model": "openai/gpt-5.2-codex",
			"permission": {
				"bash": {
					"*": "ask",
					"bat*": "allow",
					"cat*": "allow",
					"cd*": "allow",
					"delta*": "allow",
					"diff*": "allow",
