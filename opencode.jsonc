	"experimental": {
		"batch_tool": true,
	},
	"formatter": {
		"biome": {
			"command": ["bun", "x", "--bun", "biome", "check", "--fix", "$FILE"],
			"disabled": false,
			"extensions": [".jsonc", ".json", ".css", ".html", ".vue"],
		},
		"gofmt": { "disabled": true },
		"oxfmt": {
			"command": ["bun", "run", "format", "$FILE"],
			"disabled": false,
			"environment": {},
			"extensions": [".ts", ".tsx", ".js", ".jsx"],
		},
		"rustfmt": { "disabled": true },
		"uv": { "disabled": true },
		"zig": { "disabled": true },
	},
	"instructions": ["./AGENTS.md"],
	"keybinds": {
		"model_list": "ctrl+m",
	},
	"layout": "stretch",
	"lsp": {},
	"mcp": {
		"context7": {
			"enabled": true,
			"headers": { "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}" },
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
		},
		"gh-grep": {
			"enabled": true,
			"type": "remote",
			"url": "https://mcp.grep.app",
		},
		"npm-registry": {
			"command": ["npm-registry-mcp"],
			"enabled": true,
			"type": "local",
		},
	},
	"permission": {
		"bash": {
