{
	"$schema": "https://opencode.ai/config.json",
	"formatter": {
		"gofmt": { "disabled": true },
		"oxfmt": {
			"command": ["bun", "run", "format", "$FILE"],
			"disabled": false,
			"extensions": [".ts", ".tsx", ".js", ".jsx"]
		},
		"prettier": { "disabled": true },
		"uv format": { "disabled": true },
		"zig": { "disabled": true }
	},
	"lsp": {},
	"mcp": {
		"codex-subagent": {
			"command": ["uvx", "codex-as-mcp@latest"],
			"enabled": true,
			"environment": {},
			"type": "local"
		},
		"context7": {
			"command": ["bun", "x", "--bun", "@upstash/context7-mcp"],
			"enabled": true,
			"environment": {},
			"type": "local"
		},
		"fetch": {
			"command": ["uvx", "mcp-server-fetch"],
			"enabled": false,
			"type": "local"
		},
		"gh_grep": {
			"enabled": true,
			"type": "remote",
			"url": "https://mcp.grep.app"
		},
		"package-registry": {
			"command": ["bun", "x", "--bun", "package-registry-mcp"],
			"enabled": true,
			"type": "local"
		},
		"sequential-thinking": {
			"command": ["bun", "x", "--bun", "@modelcontextprotocol/server-sequential-thinking"],
			"enabled": true,
			"type": "local"
		}
	},
	"permission": {
		"bash": "ask",
		"doom_loop": "ask",
		"edit": "ask",
		"external_directory": "ask",
		"webfetch": "ask"
	}
}
