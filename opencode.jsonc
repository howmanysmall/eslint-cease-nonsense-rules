{
	"$schema": "https://opencode.ai/config.json",
	"agent": {
		"build": {
			"description": "Used after creating a plan or just whenever.",
			"mode": "all",
			"model": "anthropic/claude-sonnet-4-5",
			"permission": {
				"bash": "ask",
				"doom_loop": "ask",
				"edit": "allow",
				"external_directory": "ask",
				"webfetch": "ask"
			}
		},
		"plan": {
			"description": "Used to generate a plan.",
			"model": "anthropic/claude-opus-4-5",
			"tools": {
				"bash": false,
				"edit": false,
				"write": false
			}
		}
	},
	"formatter": {
		"biome": { "disabled": true },
		"gofmt": { "disabled": true },
		"oxfmt": {
			"command": ["bun", "run", "format", "$FILE"],
			"disabled": false,
			"environment": {},
			"extensions": [".ts", ".tsx", ".js", ".jsx"]
		},
		"uv format": { "disabled": true },
		"zig": { "disabled": true }
	},
	"instructions": ["./AGENTS.md"],
	"keybinds": {
		"model_list": "ctrl+m"
	},
	"layout": "stretch",
	"lsp": {},
	"mcp": {
		"codex-subagent": {
			"command": ["uvx", "codex-as-mcp@latest"],
			"enabled": true,
			"environment": {},
			"type": "local"
		},
		"context7": {
			"command": ["bun", "x", "--bun", "@upstash/context7-mcp"],
			"enabled": true,
			"environment": {},
			"type": "local"
		},
		"fetch": {
			"command": ["uvx", "mcp-server-fetch"],
			"enabled": false,
			"type": "local"
		},
		"gh_grep": {
			"enabled": true,
			"type": "remote",
			"url": "https://mcp.grep.app"
		},
		"package-registry": {
			"command": ["bun", "x", "--bun", "package-registry-mcp"],
			"enabled": true,
			"type": "local"
		},
		"sequential-thinking": {
			"command": ["bun", "x", "--bun", "@modelcontextprotocol/server-sequential-thinking"],
			"enabled": true,
			"type": "local"
		}
	},
	"permission": {
		"bash": "ask",
		"doom_loop": "ask",
		"edit": "ask",
		"external_directory": "ask",
		"webfetch": "ask"
	},
	"share": "manual",
	"tools": {},
	"tui": {},
	"username": "HowManySmall"
}
