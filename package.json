{
	"name": "@pobammer-ts/eslint-cease-nonsense-rules",
	"version": "1.6.0",
	"description": "A bunch of lints to prevent idiot mistakes I encounter with frequency.",
	"license": "MIT",
	"author": "HowManySmall",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/howmanysmall/eslint-cease-nonsense-rules.git"
	},
	"files": [
		"dist"
	],
	"type": "module",
	"sideEffects": false,
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"biome:ci": "bun x --bun biome ci",
		"build": "./scripts/build.ts",
		"build:legacy": "bun x --bun tsgo -p tsconfig.json",
		"dev": "bun x --bun tsgo -w",
		"format": "bun x oxfmt",
		"lint": "bun run oxc . && bun x --bun biome lint .",
		"oxc": "bun x oxlint --type-aware",
		"prepare": "bun x --bun simple-git-hooks",
		"prepublishOnly": "bun run build",
		"release": "bumpp",
		"typecheck": "bun x --bun tsgo --noEmit || bun run typecheck:safe",
		"typecheck:safe": "bun x --bun tsc --noEmit"
	},
	"dependencies": {
		"arkregex": "^0.0.5",
		"oxc-parser": "^0.104.0",
		"type-fest": "^5.3.1",
		"typebox": "^1.0.64"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@mitata/counters": "^0.0.8",
		"@octokit/rest": "^22.0.1",
		"@opencode-ai/plugin": "^1.0.105",
		"@toon-format/toon": "^1.3.0",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/bun": "1.3.5",
		"@types/node": "^20.14.11",
		"@typescript-eslint/parser": "^8.46.4",
		"@typescript-eslint/types": "^8.46.4",
		"@typescript-eslint/utils": "^8.46.4",
		"@typescript/native-preview": "7.0.0-dev.20251218.3",
		"arkenv": "^0.7.6",
		"arktype": "^2.1.29",
		"bumpp": "^10.3.2",
		"confbox": "^0.2.2",
		"eslint": "9.39.2",
		"fast-xml-parser": "^5.3.2",
		"jiti": "^2.4.2",
		"lint-staged": "^16.2.7",
		"mitata": "^1.0.34",
		"oxfmt": "^0.19.0",
		"oxlint": "^1.34.0",
		"oxlint-tsgolint": "^0.9.2",
		"simple-git-hooks": "^2.13.1",
		"sury": "^11.0.0-alpha.4",
		"ts-case-convert": "^2.1.0",
		"typescript": "^5.6.3",
		"valibot": "^1.1.0"
	},
	"peerDependencies": {
		"@typescript-eslint/parser": "^8.46.4",
		"@typescript-eslint/utils": "^8.46.4",
		"eslint": "^9.39.2"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint-staged"
	},
	"lint-staged": {
		"*": "bun run oxc --fix"
	},
	"engines": {
		"bun": ">=1.1.0",
		"node": ">=18.18"
	},
	"packageManager": "bun@1.3.2"
}
