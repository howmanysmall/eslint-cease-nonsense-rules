// this shit is the lebron of never working correctly
// truly a masterpiece
{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"recommended": true,
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		}
	},

	"css": {
		"assist": { "enabled": true },
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 120,
			"quoteStyle": "double"
		},
		"globals": [],
		"linter": { "enabled": true },
		"parser": {}
	},

	"formatter": {
		"attributePosition": "auto",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"enabled": true,
		"expand": "auto",
		"formatWithErrors": true,
		"includes": [
			"**/*.{json,jsonc,grit,ts,tsx,js,jsx,code-workspace}",
			"!**/dist/**",
			"!**/do-not-sync-ever/**",
			"!**/garbage/**",
			"!**/include/**",
			"!**/node_modules/**",
			"!**/*.ts"
		],
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 120,
		"useEditorconfig": false
	},

	"graphql": {
		"assist": { "enabled": true },
		"formatter": {
			"bracketSpacing": true,
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 120,
			"quoteStyle": "double"
		},
		"linter": { "enabled": true }
	},
	"grit": {
		"assist": { "enabled": true },
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 120
		},
		"linter": { "enabled": true }
	},

	"html": {
		"formatter": {
			"attributePosition": "auto",
			"bracketSameLine": true,
			"enabled": true,
			"indentScriptAndStyle": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineEnding": "lf",
			"lineWidth": 120,
			"selfCloseVoidElements": "always",
			"whitespaceSensitivity": "strict"
		}
	},

	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"attributePosition": "auto",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"enabled": true,
			"expand": "auto",
			"indentStyle": "tab",
			"indentWidth": 4,
			"jsxQuoteStyle": "double",
			"lineEnding": "lf",
			"lineWidth": 120,
			"quoteProperties": "asNeeded",
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "all"
		},
		"globals": ["Bun"],
		"linter": { "enabled": true }
	},

	"json": {
		"assist": { "enabled": true },
		"formatter": {
			"bracketSpacing": true,
			"enabled": true,
			"expand": "auto",
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 120,
			"trailingCommas": "none"
		},
		"linter": { "enabled": true },
		"parser": {}
	},

	"linter": {
		"enabled": true,
		"includes": [
			"!**/.vscode/**",
			"!**/*.code-workspace",
			"!**/dist/**",
			"!**/do-not-sync-ever/**",
			"!**/garbage/**",
			"!**/node_modules/**",
			"src/**",
			".husky/**",
			"**/*.ts"
		],
		"rules": {
			// a11y: oxlint has jsx_a11y but biome coverage is better
			"a11y": { "recommended": true },

			// complexity: most covered by oxlint, keep unique biome rules
			"complexity": {
				"noForEach": "error",
				"noUselessSwitchCase": "off",
				"recommended": false,
				"useArrowFunction": "off",
				"useDateNow": "error",
				"useFlatMap": "error",
				"useOptionalChain": "error",
				"useSimplifiedLogicExpression": "error"
			},

			// correctness: almost entirely covered by oxlint
			"correctness": {
				"noUnusedImports": "off",
				"noUnusedPrivateClassMembers": "off",
				"noUnusedVariables": "off",
				"recommended": false
			},

			// nursery: experimental rules
			"nursery": { "recommended": true },

			// performance: some unique to biome
			"performance": {
				"noAccumulatingSpread": "error",
				"noDelete": "error",
				"recommended": false,
				"useTopLevelRegex": "error"
			},

			// security: biome has better coverage
			"security": {
				"noDangerouslySetInnerHtml": "off",
				"recommended": true
			},

			// style: keep unique biome rules
			"style": {
				"noEnum": "off",
				"noNonNullAssertion": "off",
				"recommended": false,
				"useArrayLiterals": "off",
				"useBlockStatements": "off",
				"useConsistentMemberAccessibility": "off",
				"useConst": {
					"fix": "safe",
					"level": "error"
				},
				"useDefaultParameterLast": "error",
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": ["kebab-case"],
						"requireAscii": true
					}
				}
			},

			// suspicious: almost entirely covered by oxlint
			"suspicious": {
				"noConstEnum": "off",
				"noEmptyBlockStatements": "error",
				"recommended": false
			}
		}
	},

	"overrides": [
		{
			"includes": ["tests/fixtures/**/*.ts"],
			"linter": {
				"rules": {
					"style": {
						"useFilenamingConvention": "off"
					}
				}
			}
		},
		{
			"includes": [
				".vscode/**",
				".vscode/*.code-snippets",
				"**/*.code-workspace",
				"tsconfig.json",
				"tsconfig*.json",
				"opencode.jsonc",
				"*.code-snippets",
				"**/.ox*rc.json"
			],
			"json": {
				"formatter": {
					"enabled": true,
					"indentStyle": "tab",
					"indentWidth": 4,
					"lineWidth": 120,
					"trailingCommas": "all"
				},
				"linter": { "enabled": true },
				"parser": {
					"allowComments": true,
					"allowTrailingCommas": true
				}
			}
		},

		{
			"includes": [".claude/**/*.json"],
			"json": {
				"formatter": {
					"enabled": true,
					"indentStyle": "tab",
					"indentWidth": 4,
					"lineWidth": 120,
					"trailingCommas": "none"
				},
				"linter": { "enabled": true },
				"parser": {
					"allowComments": false,
					"allowTrailingCommas": false
				}
			}
		},

		{
			"includes": ["bun/**"],
			"linter": {
				"rules": {
					"style": {
						"noEnum": "off"
					},
					"suspicious": {
						"noConstEnum": "off"
					}
				}
			}
		}
	],

	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	}
}
