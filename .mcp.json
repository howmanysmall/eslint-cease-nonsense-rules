{
	"mcpServers": {
		"context7": {
			"args": ["--bun", "-y", "@upstash/context7-mcp"],
			"command": "bunx",
			"env": {
				"CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
			},
			"type": "stdio"
		},
		"package-registry": {
			"args": ["--bun", "-y", "package-registry-mcp"],
			"command": "bunx"
		},
		"sequential-thinking": {
			"args": ["--bun", "-y", "@modelcontextprotocol/server-sequential-thinking"],
			"command": "bunx"
		}
	}
}
